<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="parentLayout" alignment="CENTER" prefHeight="260.0" prefWidth="120.0"
      spacing="10.0" xmlns="http://javafx.com/javafx/18.0.1"
      fx:controller="com.mostafa.twfiq.bookstore.controllers.LibraryCardController">
    <children>
        <VBox alignment="CENTER" spacing="7.0">
            <children>
                <ImageView fx:id="bookImage" fitHeight="180.0" fitWidth="120.0" pickOnBounds="true"/>
                <Label fx:id="bookName" text="Book name" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="Arial Bold" size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="authorName" text="Author name">
                    <font>
                        <Font name="Calibri Light" size="12.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <JFXButton fx:id="sellBtn" prefHeight="10.0" prefWidth="50.0" style="-fx-background-color: #4765b5;" text="Sell"
                   textFill="WHITE">
            <font>
                <Font size="10.0"/>
            </font>
        </JFXButton>
    </children>
</VBox>
